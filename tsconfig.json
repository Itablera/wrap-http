{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "typeRoots" : ["./node_modules/@types", "./src/@types"]
  }
}
